{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://mirror.ox.ac.uk/sites/mirror.centos.org/7/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "85bcf62462fb678adc0cec159bf8b39ab5515404bc3828c432f743a1b0b30157",
      "iso_checksum_type": "sha256",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "http_directory": "kickstart",
      "ssh_wait_timeout": "3000s",
      "boot_wait": "10s",
      "boot_command": [ "<tab>", " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/master-ks.cfg <enter>"	  ],
      "guest_additions_mode": "upload",
      "shutdown_command": "shutdown now"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [ 
        "scripts/set-private-keys.sh",
        "scripts/foreman/install-foreman.sh",
		"scripts/install-gems.sh",
		"scripts/setup-puppet-rspec.sh",
		"scripts/setup-aliases.sh",
        "scripts/disable-services.sh"
      ]
    }
    
  ],

  "post-processors": [{
    "type": "vagrant",
    "output": "master.box"
  }]
}